{
  "ts-node": {
      "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/validation/*": ["validation/*"],
    },
  },
  "include": [
    "./src/"
  ],
  "exclude": ["node_modules"]
}
